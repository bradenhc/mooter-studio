{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "shared/*": ["src/shared/*"],
      "layouts/*": ["src/layouts/*"],
      "components/*": ["src/components"],
      "styles/*": ["src/styles/*"],
      "~components/*": ["src/components/*"],
      "~hooks/*": ["src/hooks/*"],
      "~styles/*": ["src/styles/*"],
      "~templates/*": ["src/templates/*"],
      "~contexts/*": ["src/contexts/*"],
      "~resources/*": ["src/resources/*"],
      "~connections/*": ["src/connections/*"],
      "~types": ["src/types.js"],
      "~api/*": ["src/api/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
