{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "~components/*": ["src/components/*"],
      "~hooks/*": ["src/hooks/*"],
      "~styles/*": ["src/styles"],
      "~templates/*": ["src/templates/*"],
      "~contexts/*": ["src/contexts/*"],
      "~resources/*": ["src/resources/*"],
      "~connections/*": ["src/connections/*"],
      "~types": ["src/types.js"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
